<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="postObject"
            type="com.example.bfgiactivitynotifier.common.models.ModelPost" />
    </data>

    <LinearLayout
        android:id="@+id/events_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/card_bg_rounded">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{postObject.activity_name}"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/event_organiser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{postObject.activity_type}"
            android:ellipsize="end"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/posted_by(postObject.posted_by)}"
            android:textSize="12sp"
            android:layout_marginTop="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/last_updated(postObject.time_posted)}"
            android:textSize="12sp"/>

    </LinearLayout>

</layout>