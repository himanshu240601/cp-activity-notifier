<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="eventObject"
            type="com.example.bfgiactivitynotifier.common.models.ModelPost" />
    </data>

    <LinearLayout
        android:id="@+id/events_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/card_bg_rounded">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{eventObject.activity_name}"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/event_organiser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{eventObject.plan_authority}"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="6dp"
            android:textSize="12sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginVertical="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{eventObject.event_venue}"
            android:textSize="14sp"
            android:drawablePadding="2dp"
            app:drawableStartCompat="@drawable/event_location" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{eventObject.start_date}"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/event_date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/at"
                android:paddingHorizontal="4dp"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{eventObject.event_time}"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</layout>